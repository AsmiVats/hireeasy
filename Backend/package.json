{
  "name": "talent-portal",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "pnpm -r exec rm -rf node_modules dist",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint \"packages/*/src/**/*.js\"",
    "format": "prettier --write \"packages/*/src/**/*.{js,json}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "migrate": "node scripts/runMigrations.js",
    "prestart": "node -e \"console.log('Checking if migrations are needed...')\" && npm run migrate"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.0.0"
  },
  "dependencies": {
    "ably": "^2.6.3",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "chalk": "^4.1.2",
    "cloudinary": "^1.21.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "firebase-admin": "^13.2.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.0",
    "socket.io": "^4.8.1",
    "stripe": "^17.7.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  }
}
